{% extends 'base.html.twig' %}

{% block title %}Creation conference{% endblock %}

{% block body %}
{% block nav %}
    {% include "browser/browser.html.twig" %}
{% endblock nav %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                    {{ form_start(form) }}
                                <h1>Add new conference</h1>
                            </div>
            <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.title) }}
                                    {{ form_widget(form.title, {'id': 'title', 'attr': {'class': 'form-control'}}) }}

                                </div>
                                <div class="form-group">

                                    {{ form_label(form.createdAt) }}
                                    <div class="form-row">
                                        <div class="col">{{ form_widget(form.createdAt.date.month, {'attr': {'class': 'form-control'}}) }}</div>
                                        <div class="col">{{ form_widget(form.createdAt.date.day, {'attr': {'class': 'form-control'}}) }}</div>
                                        <div class="col">{{ form_widget(form.createdAt.date.year, {'attr': {'class': 'form-control'}}) }}</div>
                                        <div class="col">{{ form_widget(form.createdAt.time.hour, {'attr': {'class': 'form-control'}}) }}</div>
                                        <span style="transform: translateY(7px)">:</span>
                                        <div class="col">{{ form_widget(form.createdAt.time.minute, {'attr': {'class': 'form-control'}}) }}</div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description, { 'id': 'textarea', 'attr': {'class': 'form-control', 'data-length': '200'}}) }}
                                </div>

                                <div class="form-group">
                                    {{ form_row(form.add, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
{% endblock %}
