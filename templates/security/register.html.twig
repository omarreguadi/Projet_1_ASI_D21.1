{% extends 'base.html.twig' %}
{% block body %}
    {% block nav %}
        {% include "browser/browser.html.twig" %}
    {% endblock nav %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Register</h1>
                <p>Fill out this form to create your account. You already have an account ? <a href="/login">Login</a> now !</p>
            </div>
            <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}

                </div>
                <div class="form-group">
                    {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password.first, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password.second, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.valid, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
